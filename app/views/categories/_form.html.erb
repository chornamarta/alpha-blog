<div class="container">
  <div class="row justify-content-center">
    <%= render 'shared/errors', obj: @category %> 
    <div class="col-10">
      <%= form_with(model: @category, class: "shadow p-3 mb-3 rounded",id:"form-color", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name,"Category name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter the name of the category" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-dark btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to categories listing ]', categories_path, class: "text-dark" %>
    </div>
  </div>
</div>